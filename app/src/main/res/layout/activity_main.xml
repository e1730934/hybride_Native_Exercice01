<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/series01" android:id="@+id/imgBtn00"
                android:scaleType="centerInside" android:contentDescription="@string/attack_on_titan"/>
    </androidx.cardview.widget.CardView>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.025"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/series02" android:id="@+id/imgBtn01"
                android:scaleType="centerInside" android:contentDescription="@string/the_beginning"/>
    </androidx.cardview.widget.CardView>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.025"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/series03" android:id="@+id/imgBtn02"
                android:scaleType="centerInside" android:contentDescription="@string/black_clover"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
